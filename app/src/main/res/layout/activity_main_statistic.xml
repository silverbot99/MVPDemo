<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_E9E9FF">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/color_blue">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                    <ImageView
                        android:id="@+id/ivHuman"
                        android:layout_width="136dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="38dp"
                        android:layout_marginBottom="30dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@mipmap/ic_human_foreground"/>

                    <TextView
                        android:id="@+id/tvWorldCases"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Số Ca Nhiễm Trên Thế Giới"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/color_white"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        app:layout_constraintStart_toEndOf="@id/ivHuman"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ivHuman"/>

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="April 24, 2020, 12:48 GMT"
                        android:textColor="@color/color_white"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_marginTop="13dp"
                        app:layout_constraintStart_toEndOf="@id/ivHuman"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvWorldCases"/>

                    <TextView
                        android:id="@+id/tvTotalCases"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="27,32,445"
                        android:textColor="@color/color_white"
                        android:gravity="center"
                        android:textSize="40sp"
                        android:layout_marginTop="13dp"
                        app:layout_constraintStart_toEndOf="@id/ivHuman"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTime"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvActiveCases"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/cvDeaths"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glCenterActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.6"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/tvTitleActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ca nhiễm bệnh hiện tại"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:textColor="@color/color_7777FF"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0"/>

                    <TextView
                        android:id="@+id/tvTotalActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="206,577"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/color_back"
                        android:textSize="35sp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleActive"
                        app:layout_constraintHorizontal_bias="0"/>
                    
                    <com.robinhood.spark.SparkView
                        android:id="@+id/spartViewActive"
                        android:layout_width="130dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalActive" />
                    <ImageView
                        android:id="@+id/ivMobilizeMildConditionActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_decrease_green"
                        android:layout_marginTop="22dp"
                        app:layout_constraintStart_toEndOf="@id/glCenterActive"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"/>

                    <TextView
                        android:id="@+id/tvMildConditionActive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="+25.7%"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/color_back"
                        android:textSize="20sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="6dp"
                        app:layout_constraintStart_toEndOf="@id/ivMobilizeMildConditionActive"
                        app:layout_constraintTop_toTopOf="@id/ivMobilizeMildConditionActive"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/ivMobilizeMildConditionActive"/>

                    <TextView
                        android:id="@+id/tvTitleMildConditionActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14dp"
                        android:text="Tình trạng nhẹ"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="@id/glCenterActive"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivMobilizeMildConditionActive"/>

                    <ImageView
                        android:id="@+id/ivMobilizeCriticalActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_decrease_green"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toEndOf="@id/glCenterActive"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleMildConditionActive"/>

                    <TextView
                        android:id="@+id/tvCriticalActive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="+25.7%"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/color_back"
                        android:textSize="20sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="6dp"
                        app:layout_constraintStart_toEndOf="@id/ivMobilizeCriticalActive"
                        app:layout_constraintTop_toTopOf="@id/ivMobilizeCriticalActive"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/ivMobilizeCriticalActive"/>

                    <TextView
                        android:id="@+id/tvTitleCriticalActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14dp"
                        android:text="Nguy kịch"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="22dp"
                        app:layout_constraintStart_toStartOf="@id/glCenterActive"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivMobilizeCriticalActive"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDeaths"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.6"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/tvTitleDeaths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tử vong"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:textColor="@color/color_7777FF"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0"/>

                    <TextView
                        android:id="@+id/tvTotalDeaths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="206,577"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/color_back"
                        android:textSize="35sp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleDeaths"
                        app:layout_constraintHorizontal_bias="0"/>

                    <com.robinhood.spark.SparkView
                        android:id="@+id/spartViewDeaths"
                        android:layout_width="130dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalDeaths" />
                    <ImageView
                        android:id="@+id/ivMobilizeMildCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_decrease_green"
                        android:layout_marginTop="22dp"
                        app:layout_constraintStart_toEndOf="@id/glCenter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"/>

                    <TextView
                        android:id="@+id/tvMildCondition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="+25.7%"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/color_back"
                        android:textSize="20sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="6dp"
                        app:layout_constraintStart_toEndOf="@id/ivMobilizeMildCondition"
                        app:layout_constraintTop_toTopOf="@id/ivMobilizeMildCondition"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/ivMobilizeMildCondition"/>

                    <TextView
                        android:id="@+id/tvTitleMildCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14dp"
                        android:text="Tình trạng nhẹ"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="@id/glCenter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivMobilizeMildCondition"/>

                    <ImageView
                        android:id="@+id/ivMobilizeCritical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_decrease_green"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toEndOf="@id/glCenter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleMildCondition"/>

                    <TextView
                        android:id="@+id/tvCritical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="+25.7%"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/color_back"
                        android:textSize="20sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="6dp"
                        app:layout_constraintStart_toEndOf="@id/ivMobilizeCritical"
                        app:layout_constraintTop_toTopOf="@id/ivMobilizeCritical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/ivMobilizeCritical"/>

                    <TextView
                        android:id="@+id/tvTitleCritical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14dp"
                        android:text="Nguy kịch"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="22dp"
                        app:layout_constraintStart_toStartOf="@id/glCenter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivMobilizeCritical"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>